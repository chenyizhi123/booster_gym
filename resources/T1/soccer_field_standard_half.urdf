    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 7.0 0.5"/>
      </geometry>
      <material name="fence_gray">
        <color rgba="0.5 0.5 0.5 0.8"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 7.0 0.5"/>
      </geometry>
    </collision>
  </link>

  <joint name="back_fence_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="back_fence"/>
    <origin xyz="-2.75 0 0.255" rpy="0 0 0"/>
