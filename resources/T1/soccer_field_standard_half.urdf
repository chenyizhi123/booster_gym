<?xml version="1.0" encoding="utf-8"?>
<robot name="soccer_field_standard_half">
  <!-- 标准半场足球场 URDF 文件 -->
  <!-- 半场尺寸: 52.5m x 68m (缩放比例 1:10) -->
  <!-- 符合FIFA标准尺寸 -->
  
  <!-- 球场地面 -->
  <link name="field_plane">
    <inertial>
      <mass value="10000"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1000.0" ixy="0.0" ixz="0.0" iyy="1000.0" iyz="0.0" izz="1000.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="5.25 6.8 0.01"/>
      </geometry>
      <material name="grass_green">
        <color rgba="0.133 0.545 0.133 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="5.25 6.8 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- 边界线 -->
  <!-- 底线（球门线） -->
  <link name="goal_line">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.012 6.8 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="goal_line_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_line"/>
    <origin xyz="-2.625 0 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 边线（左） -->
  <link name="left_sideline">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="5.25 0.012 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="left_sideline_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="left_sideline"/>
    <origin xyz="0 -3.4 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 边线（右） -->
  <link name="right_sideline">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="5.25 0.012 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="right_sideline_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="right_sideline"/>
    <origin xyz="0 3.4 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 中线 -->
  <link name="halfway_line">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.012 6.8 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="halfway_line_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="halfway_line"/>
    <origin xyz="2.625 0 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 中心点 -->
  <link name="center_spot">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.002"/>
      </geometry>
      <material name="white_spot">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="center_spot_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="center_spot"/>
    <origin xyz="2.625 0 0.006" rpy="0 0 0"/>
  </joint>

  <!-- 大禁区（罚球区） -->
  <!-- 大禁区前沿线 -->
  <link name="penalty_area_front">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.012 4.03 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="penalty_area_front_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="penalty_area_front"/>
    <origin xyz="-0.975 0 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 大禁区左侧线 -->
  <link name="penalty_area_left">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="1.65 0.012 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="penalty_area_left_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="penalty_area_left"/>
    <origin xyz="-1.8 -2.015 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 大禁区右侧线 -->
  <link name="penalty_area_right">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="1.65 0.012 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="penalty_area_right_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="penalty_area_right"/>
    <origin xyz="-1.8 2.015 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 小禁区（球门区） -->
  <!-- 小禁区前沿线 -->
  <link name="goal_area_front">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.012 1.832 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="goal_area_front_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_area_front"/>
    <origin xyz="-2.075 0 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 小禁区左侧线 -->
  <link name="goal_area_left">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.55 0.012 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="goal_area_left_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_area_left"/>
    <origin xyz="-2.35 -0.916 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 小禁区右侧线 -->
  <link name="goal_area_right">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.55 0.012 0.001"/>
      </geometry>
      <material name="white_line">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="goal_area_right_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_area_right"/>
    <origin xyz="-2.35 0.916 0.005" rpy="0 0 0"/>
  </joint>

  <!-- 点球点 -->
  <link name="penalty_spot">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.002"/>
      </geometry>
      <material name="white_spot">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="penalty_spot_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="penalty_spot"/>
    <origin xyz="-1.525 0 0.006" rpy="0 0 0"/>
  </joint>

  <!-- 球门 -->
  <!-- 球门立柱和横梁 -->
  <!-- 左立柱 -->
  <link name="goal_post_left">
    <inertial>
      <mass value="50"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="5.0" ixy="0.0" ixz="0.0" iyy="5.0" iyz="0.0" izz="5.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.244"/>
      </geometry>
      <material name="goal_white">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.244"/>
      </geometry>
    </collision>
  </link>

  <joint name="goal_post_left_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_post_left"/>
    <origin xyz="-2.625 -0.366 0.127" rpy="0 0 0"/>
  </joint>

  <!-- 右立柱 -->
  <link name="goal_post_right">
    <inertial>
      <mass value="50"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="5.0" ixy="0.0" ixz="0.0" iyy="5.0" iyz="0.0" izz="5.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.244"/>
      </geometry>
      <material name="goal_white">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.244"/>
      </geometry>
    </collision>
  </link>

  <joint name="goal_post_right_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_post_right"/>
    <origin xyz="-2.625 0.366 0.127" rpy="0 0 0"/>
  </joint>

  <!-- 横梁 -->
  <link name="goal_crossbar">
    <inertial>
      <mass value="30"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="3.0" ixy="0.0" ixz="0.0" iyy="3.0" iyz="0.0" izz="3.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.732"/>
      </geometry>
      <material name="goal_white">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.06" length="0.732"/>
      </geometry>
    </collision>
  </link>

  <joint name="goal_crossbar_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_crossbar"/>
    <origin xyz="-2.625 0 0.244" rpy="0 0 0"/>
  </joint>

  <!-- 球门网（简化表示） -->
  <!-- 后网 -->
  <link name="goal_net_back">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.732 0.244"/>
      </geometry>
      <material name="net_white">
        <color rgba="1.0 1.0 1.0 0.3"/>
      </material>
    </visual>
  </link>

  <joint name="goal_net_back_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_net_back"/>
    <origin xyz="-2.725 0 0.127" rpy="0 0 0"/>
  </joint>

  <!-- 左侧网 -->
  <link name="goal_net_left">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.01 0.244"/>
      </geometry>
      <material name="net_white">
        <color rgba="1.0 1.0 1.0 0.3"/>
      </material>
    </visual>
  </link>

  <joint name="goal_net_left_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_net_left"/>
    <origin xyz="-2.675 -0.366 0.127" rpy="0 0 0"/>
  </joint>

  <!-- 右侧网 -->
  <link name="goal_net_right">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.01 0.244"/>
      </geometry>
      <material name="net_white">
        <color rgba="1.0 1.0 1.0 0.3"/>
      </material>
    </visual>
  </link>

  <joint name="goal_net_right_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_net_right"/>
    <origin xyz="-2.675 0.366 0.127" rpy="0 0 0"/>
  </joint>

  <!-- 顶网 -->
  <link name="goal_net_top">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.732 0.01"/>
      </geometry>
      <material name="net_white">
        <color rgba="1.0 1.0 1.0 0.3"/>
      </material>
    </visual>
  </link>

  <joint name="goal_net_top_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="goal_net_top"/>
    <origin xyz="-2.675 0 0.244" rpy="0 0 0"/>
  </joint>

  <!-- 场地边界围栏（可选） -->
  <!-- 左边界 -->
  <link name="left_fence">
    <inertial>
      <mass value="100"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="10.0" ixy="0.0" ixz="0.0" iyy="10.0" iyz="0.0" izz="10.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="5.5 0.05 0.5"/>
      </geometry>
      <material name="fence_gray">
        <color rgba="0.5 0.5 0.5 0.8"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="5.5 0.05 0.5"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_fence_joint" type="fixed">
    <parent link="field_plane"/>
    <child link="left_fence"/>
    <origin xyz="0 -3.5 0.255" rpy="0 0 0"/>
